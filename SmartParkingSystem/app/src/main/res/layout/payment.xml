<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titlePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:text="Payment Portal"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/amountToBePaidID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlePayment"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="45dp"
            android:text="Amount to be paid: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/payNowID"
            android:layout_width="384dp"
            android:layout_height="62dp"
            android:layout_below="@+id/amountToBePaidID"
            android:layout_alignStart="@+id/amountToBePaidID"
            android:layout_alignEnd="@+id/amountToBePaidID"
            android:layout_marginStart="12dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorAccent"
            android:text="Pay Now"
            android:textColor="@color/colorTextSave"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountToBePaidID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="192dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:text="Payment Methods to be added later..."
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:textStyle="bold" />



    </RelativeLayout>
</LinearLayout>